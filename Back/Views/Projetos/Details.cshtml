@model ControleDeProjetos.Models.Projeto

@{
    ViewData["Title"] = "Projetos - Details";
}

<h1>Detalhes do Projeto</h1>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Nome
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Model.Cliente?.Nome
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Model.Descricao
        </dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.ProjetoId" class="btn btn-warning">
        <i class="fa fa-edit"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
