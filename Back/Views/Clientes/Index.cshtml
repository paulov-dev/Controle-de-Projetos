@model IEnumerable<ControleDeProjetos.Models.Cliente>

@{
    ViewData["Title"] = "Clientes - Index";
}

<h1>Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Novo Cliente
    </a>
</p>

<table id="tabela-clientes" class="display table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Cidade</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Endereco</td>
                <td>@cliente.Cidade</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cliente.ClienteId" class="btn btn-warning btn-sm">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@cliente.ClienteId" class="btn btn-info btn-sm">
                        <i class="fa fa-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@cliente.ClienteId" class="btn btn-danger btn-sm">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tabela-clientes').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.13.4/i18n/pt-BR.json"
                }
            });

            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage && successMessage.trim().length > 0) {
                Swal.fire({
                    title: 'Excluído!',
                    text: successMessage,
                    icon: 'success',
                    confirmButtonText: 'OK'
                });
            }
        });
    </script>
}
