@model ControleDeProjetos.Models.Tarefa

@{
    ViewData["Title"] = "Tarefas - Details";
}

<h1>Detalhes da Tarefa</h1>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Model.Titulo
        </dd>
        <dt class="col-sm-2">
            Projeto
        </dt>
        <dd class="col-sm-10">
            @Model.Projeto?.Nome (@Model.Projeto?.Cliente?.Nome)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Model.Descricao
        </dd>
        <dt class="col-sm-2">
            Concluída
        </dt>
        <dd class="col-sm-10">
            @(Model.Concluida ? "Sim" : "Não")
        </dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.TarefaId" class="btn btn-warning">
        <i class="fa fa-edit"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
