@model ControleDeProjetos.Models.Tarefa

@{
    ViewData["Title"] = "Tarefas - Edit";
    var projetos = ViewBag.Projetos as List<ControleDeProjetos.Models.Projeto>;
    var selectList = new SelectList(projetos, "ProjetoId", "Nome", Model.ProjetoId);
}

<h1>Editar Tarefa</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="TarefaId" />

            <div class="form-group">
                <label asp-for="Titulo"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProjetoId"></label>
                <select asp-for="ProjetoId" class="form-control"
                        asp-items="selectList">
                    <option value="">-- Selecione o Projeto --</option>
                </select>
                <span asp-validation-for="ProjetoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="Concluida" class="form-check-input" />
                <label asp-for="Concluida" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Salvar
            </button>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
